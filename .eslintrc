{
    "globals":{
      "swfobject": true,
      "sinon": true
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "mocha": true,
        "amd": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "comma-spacing": [2, {"before": false, "after": true}],        
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console":0
    },
    "parserOptions": {
        "ecmaVersion": 6
    }
}
